// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Vacancy {
  id              Int           @id @default(autoincrement())
  title           String @unique
  description     String
  location        String
  salaryRange     String
  experienceLevel String
  publishedDate   DateTime
}

model Applicant {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String   @unique
  phone          String
  address        String
  city           String
  country        String
  applicationDate DateTime
}
